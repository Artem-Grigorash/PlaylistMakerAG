<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleBorder"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/arrayBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/array_back"
        app:tint="@color/classic_text"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/trackPicture"
        android:layout_width="341dp"
        android:layout_height="351dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/middleBorder"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:srcCompat="@drawable/tracks_place_holder" />



    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleGray"
        android:layout_marginBottom="24dp"
        android:text="@string/country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/leftBorder" />

    <TextView
        android:id="@+id/country_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleBlack"
        android:layout_marginBottom="24dp"
        tools:text="Russia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleGray"
        android:layout_marginBottom="8dp"
        android:text="@string/genre"
        app:layout_constraintBottom_toTopOf="@+id/country"
        app:layout_constraintStart_toStartOf="@+id/leftBorder" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleGray"
        android:layout_marginBottom="8dp"
        android:text="@string/year"
        app:layout_constraintBottom_toTopOf="@+id/genre"
        app:layout_constraintStart_toStartOf="@+id/leftBorder" />

    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleGray"
        android:layout_marginBottom="8dp"
        android:text="@string/album"
        app:layout_constraintBottom_toTopOf="@+id/year"
        app:layout_constraintStart_toStartOf="@+id/leftBorder" />

    <TextView
        android:id="@+id/time_of_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleGray"
        android:layout_marginBottom="8dp"
        android:text="@string/length"
        app:layout_constraintBottom_toTopOf="@+id/album"
        app:layout_constraintStart_toStartOf="@+id/leftBorder" />

    <TextView
        android:id="@+id/genre_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleBlack"
        android:layout_marginBottom="8dp"
        tools:text="Rock"
        app:layout_constraintBottom_toTopOf="@+id/country_value"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder" />

    <TextView
        android:id="@+id/year_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleBlack"
        android:layout_marginBottom="8dp"
        tools:text="2018"
        app:layout_constraintBottom_toTopOf="@+id/genre_value"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder" />

    <TextView
        android:id="@+id/album_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleBlack"
        android:layout_marginBottom="8dp"
        tools:text="Super album"
        app:layout_constraintBottom_toTopOf="@+id/year_value"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder" />

    <TextView
        android:id="@+id/time_of_track_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleBlack"
        android:layout_marginBottom="8dp"
        tools:text="5:12"
        app:layout_constraintBottom_toTopOf="@+id/album_value"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder" />

    <TextView
        android:id="@+id/name_of_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HeaderStyle"
        android:layout_marginTop="16dp"
        tools:text="Name of track"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toTopOf="@+id/middleBorder" />

    <TextView
        android:id="@+id/author_of_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PlaceHolderStyle"
        android:layout_marginTop="8dp"
        tools:text="Author"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/name_of_track" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/white_dark"
        android:clickable="true"
        android:foregroundGravity="center"
        app:backgroundTint="@color/classic_text"
        app:tint="@color/classic_text"
        app:borderWidth="2dp"

        app:fabCustomSize="85dp"
        app:layout_constraintBottom_toTopOf="@+id/time_of_track"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/author_of_track"
        app:maxImageSize="85dp"
        app:srcCompat="@drawable/play" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_track_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        app:borderWidth="0dp"
        app:fabCustomSize="50dp"
        app:maxImageSize="50dp"
        android:foregroundGravity="center"
        android:backgroundTint="@color/text_gray"
        app:backgroundTint="@color/button_white"
        app:tint="@color/button_white"
        app:layout_constraintBottom_toBottomOf="@+id/play_button"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toTopOf="@+id/play_button"
        app:srcCompat="@drawable/add_track" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/like_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        app:borderWidth="0dp"
        app:fabCustomSize="50dp"
        app:maxImageSize="50dp"
        android:foregroundGravity="center"
        android:backgroundTint="@color/text_gray"
        app:backgroundTint="@color/button_white"
        app:tint="@color/button_white"
        app:layout_constraintBottom_toBottomOf="@+id/play_button"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder"
        app:layout_constraintTop_toTopOf="@+id/play_button"
        app:srcCompat="@drawable/like" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LittleTextStyleBlack"
        android:layout_marginTop="8dp"
        android:text="@string/start_time"
        app:layout_constraintEnd_toEndOf="@+id/play_button"
        app:layout_constraintStart_toStartOf="@+id/play_button"
        app:layout_constraintTop_toBottomOf="@+id/play_button" />


</androidx.constraintlayout.widget.ConstraintLayout>