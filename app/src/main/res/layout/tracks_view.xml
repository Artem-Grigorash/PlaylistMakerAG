<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingStart="55dp"
        android:paddingBottom="10dp"
        tools:text="Very important news text" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="55dp"
        android:paddingTop="20dp"
        android:textSize="14sp"
        tools:text="author"
        />

    <TextView
        android:id="@+id/trackTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="205dp"
        android:paddingTop="20dp"
        android:textSize="14sp"
        tools:text="time"
        />

    <ImageView
        android:id="@+id/trackPicture"
        style="@style/TracksPicturesStyle"
        android:layout_gravity="start"
        />

    <ImageView
        android:id="@+id/array"
        style="@style/TracksArraysStyle"
        android:layout_gravity="end"

        app:srcCompat="@drawable/array_forward"
        app:tint="@color/icons_tint"
        />

</FrameLayout>