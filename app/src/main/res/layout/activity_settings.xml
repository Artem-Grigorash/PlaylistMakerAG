<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white_dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:paddingLeft="50dp"
            android:paddingTop="5dp"
            style="@style/HeaderStyle"/>

        <ImageView
            android:id="@+id/settings_back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/array_back"
            app:tint="@color/classic_text" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_theme"
            android:layout_gravity="center_vertical"
            style="@style/ClassicTextStyle"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/SettingsPicturesStyle"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settings_share"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/ClassicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/share" />

        <ImageView
            style="@style/SettingsPicturesStyle"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:srcCompat="@drawable/share"
            app:tint="@color/icons_tint" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settings_mail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/ClassicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/help" />

        <ImageView
            style="@style/SettingsPicturesStyle"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:srcCompat="@drawable/support"
            app:tint="@color/icons_tint" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settinds_agreement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/ClassicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/agreement" />

        <ImageView
            style="@style/SettingsPicturesStyle"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:srcCompat="@drawable/array_forward"
            app:tint="@color/icons_tint" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

    </FrameLayout>


</LinearLayout>