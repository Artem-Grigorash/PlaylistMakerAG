<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenGray"
    tools:context=".mediateka.ui.PlaylistInfoFragment"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="28dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainPart"
            android:background="@color/screenGray">


            <ImageView
                android:id="@+id/placeholderImage"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_marginBottom="446dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/placeholder_bordered"
                />

            <ImageView
                android:id="@+id/arrayBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/array_back"
                app:tint="@color/permanent_black" />

            <TextView
                android:id="@+id/name"
                style="@style/HeaderStyle"
                android:textColor="@color/permanent_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeholderImage"
                tools:text="Best songs 2021" />

            <TextView
                android:id="@+id/description_text"
                style="@style/ClassicTextStyle"
                android:textColor="@color/permanent_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:text="2022" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ClassicTextStyle"
                android:textColor="@color/permanent_black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="300 минут . 98 треков"
                app:layout_constraintTop_toBottomOf="@+id/description_text" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/share2"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/permanent_black"
                app:layout_constraintTop_toBottomOf="@+id/time_text" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/dots"
                app:layout_constraintStart_toEndOf="@+id/share"
                app:tint="@color/permanent_black"
                app:layout_constraintTop_toBottomOf="@+id/time_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:behavior_peekHeight="240dp"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_smth"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracklist"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/tracks_view"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:behavior_peekHeight="260dp"
        android:clickable="true"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_smth"/>

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/title"
                style="@style/SearchTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingStart="55dp"
                android:paddingBottom="10dp"
                tools:text="Name of plalist" />

            <TextView
                android:id="@+id/description"
                style="@style/LittleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="55dp"
                android:paddingTop="20dp"
                tools:text="Amount of added tracks"
                />

            <ImageView
                android:id="@+id/placeholderAlbum"
                style="@style/TracksPicturesStyle"
                android:layout_gravity="start"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/share_option"
            style="@style/SearchTextStyle"
            android:textColor="@color/permanent_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeholderImage"
            android:text="Поделиться" />

        <TextView
            android:id="@+id/edit_option"
            style="@style/SearchTextStyle"
            android:textColor="@color/permanent_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeholderImage"
            android:text="Редактировать информацию" />

        <TextView
            android:id="@+id/delete_option"
            style="@style/SearchTextStyle"
            android:textColor="@color/permanent_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeholderImage"
            android:text="Удалить плейлист" />



    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>