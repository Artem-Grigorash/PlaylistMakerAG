<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/button_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ClassicTextStyle">
        <item name="android:textColor">@color/classic_text</item>
        <item name="android:textSize">@dimen/classic_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SearchTextStyle">
        <item name="android:textColor">@color/totalBlack</item>
        <item name="android:textSize">@dimen/search_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SearchPermanentTextStyle">
        <item name="android:textColor">@color/permanent_black</item>
        <item name="android:textSize">@dimen/search_big_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="LittleTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="LittleTextStyleGray">
        <item name="android:textColor">@color/permanentGray</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="LittleTextStyleBlack">
        <item name="android:textColor">@color/classic_text</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsPicturesStyle">
        <item name="android:layout_width">@dimen/settings_picture_layout_width</item>
        <item name="android:paddingVertical">@dimen/settings_picture_padding_vertical</item>
    </style>
    <style name="TracksPicturesStyle">
        <item name="android:layout_width">@dimen/tracks_picture_layout_width</item>
        <item name="android:layout_height">@dimen/tracks_picture_layout_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="TracksArraysStyle">
        <item name="android:layout_width">@dimen/arrays_picture_layout_width</item>
        <item name="android:layout_height">@dimen/arrays_picture_layout_height</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingVertical">@dimen/settings_picture_padding_vertical</item>
    </style>
    <style name="HeaderStyle">
        <item name="android:textColor">@color/classic_text</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="PlaceHolderStyle">
        <item name="android:textColor">@color/classic_text</item>
        <item name="android:textSize">@dimen/classic_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ReloadTextStyle">
        <item name="android:textColor">@color/white_dark</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>
</resources>