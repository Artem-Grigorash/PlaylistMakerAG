<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle">
        <item name="android:backgroundTint">@color/button_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ClassicTextStyle">
        <item name="android:textColor">@color/classic_text</item>
        <item name="android:textSize">@dimen/classic_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsPicturesStyle">
        <item name="android:layout_width">@dimen/settings_picture_layout_width</item>
        <item name="android:paddingVertical">@dimen/settings_picture_padding_vertical</item>
    </style>
    <style name="HeaderStyle">
        <item name="android:textColor">@color/classic_text</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>